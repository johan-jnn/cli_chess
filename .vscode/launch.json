{
  "configurations": [
    {
      "name": "Python Debugger: Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal"
    },
    {
      "name": "Python Debugger: Project Testing",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/__main__.py",
      "console": "integratedTerminal",
      "args": "--test"
    },
    {
      "name": "Python Debugger: Units testing",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/__main__.py",
      "console": "integratedTerminal",
      "args": "--units"
    },
    {
      "name": "Python Debugger: Project",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/__main__.py",
      "console": "integratedTerminal"
    }
  ]
}
